<div class="row">
  <div class="col-sm-6">

  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <div class="row">
        <div class="col-sm-6">
          <%= select("post", "category_id", Category.all.collect {|p| [ p.title, p.id ] }, { include_blank: false, class: "form-control" }) %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <div class="row large">
        <div class="col-sm-12">
          <%= f.text_area :content, class: "form-control", rows: 5 %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>

  </div>
</div>
