<% if @category %>
  <% title("Nutshell - #{@category.title}") %>
  <h3><%= @category.title %></h3>
  <hr class="dotted"/>
<% end %>

<table class="table table-striped">

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= paginate @posts %>
