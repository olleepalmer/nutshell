<%= form_for(:user, :as => :user, :url => session_path(:user), role: "form", remote: true) do |f| %>

  <% if resource.nil? %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      Failed to sign in, please check username or password.
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.text_field :username, :autofocus => true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
